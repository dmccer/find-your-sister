body
	width: 100%

.main
	width: 100%

.search-panel
	width: 80%
	padding: 40% 0
	margin: 0 auto

/* Form wrapper styling */
.form-wrapper
	padding: 15px
	background: #444
	background: rgba(0,0,0,.2)
	border-radius: 10px
	box-shadow: 0 1px 1px rgba(0,0,0,.4) inset, 0 1px 0 rgba(255,255,255,.2)
	
/* Form text input */
.form-wrapper input
	box-sizing: border-box
	width: 80%
	padding: 11px 5px
	float: left 
	font: bold 15px 'lucida sans', 'trebuchet MS', 'Tahoma'
	border: 0
	background: #eee
	border-radius: 3px 0 0 3px 
	
.form-wrapper input:focus 
	outline: 0
	background: #fff
	box-shadow: 0 0 2px rgba(0,0,0,.8) inset
	
.form-wrapper input::-webkit-input-placeholder 
	color: #999
	font-weight: normal
	font-style: normal
	
.form-wrapper input:-moz-placeholder 
	color: #999
	font-weight: normal
	font-style: italic
	
.form-wrapper input:-ms-input-placeholder 
	color: #999
	font-weight: normal
	font-style: italic
	 
/* Form submit button */
.form-wrapper button 
	overflow: visible
	position: relative
	float: right
	border: 0
	padding: 0
	cursor: pointer
	width: 20%
	box-sizing: border-box
	font: bold 15px/40px 'lucida sans', 'trebuchet MS', 'Tahoma'
	color: #fff
	text-transform: uppercase
	background: #d83c3c
	border-radius: 0 3px 3px 0 
	text-shadow: 0 -1px 0 rgba(0, 0 ,0, .3)
	 
.form-wrapper button:hover 
	background: #e54040
	 
.form-wrapper button:active,
.form-wrapper button:focus 
	background: #c42f2f
	outline: 0 
	
.form-wrapper button:before  /* left arrow */
	content: ''
	position: absolute
	border-width: 8px 8px 8px 0
	border-style: solid solid solid none
	border-color: transparent #d83c3c transparent
	top: 12px
	left: -6px
	
.form-wrapper button:hover:before
	border-right-color: #e54040
	
.form-wrapper button:focus:before,
.form-wrapper button:active:before
	border-right-color: #c42f2f
	 
.form-wrapper button::-moz-focus-inner  /* remove extra button spacing for Mozilla Firefox */
	border: 0
	padding: 0

.person-bg
	width: 100%
	height: 100%
	

.person-up
	position: relative
	background:	#FF7F00

.person-down
	height: 100%
	overflow-y: auto
	overflow-x: hidden

.main
	box-sizing: border-box
	padding: 1em 1em 0
	margin-bottom: 1em

.name-panel
	font-weight: normal
	color: #ffffff
	font-size: 2em

.tab
	width: 100%

.tab:before
	position: absolute
	content: ''
	border-width: 0px 0.5em 0.5em 0.5em
	border-style: solid solid solid solid
	border-color: #FFFFFF transparent  
	left: 10%
	bottom: -1px
	z-index: 10

.person .tab:before
	left: 23%

.location .tab:before
	left: 73%

.tab-item
	width: 50%
	box-sizing: border-box
	float: left
	font-size: 1em
	text-align: center
	font-weight: normal

.tab-item a
	display: block
	padding: 0.8em
	cursor: pointer
	color: #ffffff

.tab-content
	padding: 1em auto
	width: 100%
	box-sizing: border-box
	display: inline-block
	vertical-align: top

.person-info
	list-style: none

.person-info li
	width: 100%
	float: left

.person-info li span,
.person-info li b
	display: inline-block
	box-sizing: border-box

.person-info li span
	float: left
	width: 5em
	padding-left: 1em
	padding: 0.5em 0 0.5em 1em
	color: #777777

.person-info li b
	padding: 0.5em 1em 0.5em 0.5em

.location-info
	list-style: decimal inside

.location-info li
	padding: 0.5em 1em
	color: #999999

.location-info li:first-child
	color: #ff1100

.location-info li:nth-child(2)
	color: #ff6600

.location-info li:nth-child(3)
	color: #ff9900
.ul li
	list-style: none
